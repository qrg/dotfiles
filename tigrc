set split-view-height = 90%
set diff-options = --patience
set diff-highlight = true

set blob-view = line-number:yes,interval=10 \
                text

set diff-view = line-number:yes,interval=10 \
                text

set log-view = line-number:yes,interval=10 \
               text

set pager-view = line-number:yes,interval=10 \
                 text

set stage-view = line-number:yes,interval=10 \
                 text

set main-view = line-number:yes,interval=10 \
                id:width=6 \
                date:relative \
                author \
                commit-title:graph=yes,refs=yes

set tree-view = author \
                date \
                id:width=6 \
                file-name \
                file-size:units \
                line-number:yes,interval=10 \
                mode:yes

color cursor default black bold
color id black default bold
color date black default bold
color line-number black default bold

color title-focus black white reverse
color title-blur black white reverse

color "Author: " black default bold
color "Commit: " black default bold
color "Tagger: " black default bold
color "Merge: " black default bold
color "Date: " black default bold
color "AuthorDate: " black default bold
color "CommitDate: " black default bold
color "TaggerDate: " black default bold

# H で、コミットハッシュ値をコピーできるようにする
bind main H !@bash -c "cut -c-7 <<<%(commit) | xargs echo -n | pbcopy"

# R で rebase -i
bind main    R !git rebase -i %(commit)

