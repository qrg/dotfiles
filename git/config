[core]
  editor = nvim -i NONE -N -c 'syntax on'
  autocrlf = input
  safecrlf = false

[init]
  defaultBranch = main

[color]
  ui = true
  branch = auto
  diff = auto
  status = auto
  showbranch = auto

[color "branch"]
  current = green reverse
  local = green
  remote = 243

[color "diff"]
  meta = 242 238
  frag = 239 236
  old = 167 normal
  new = 030 normal
  context = 240
  commit = 246 024

[color "status"]
  added = green
  changed = cyan
  untracked = yellow

[merge]
  ff = false

[pull]
  ff = only
  rebase = true

[push]
	default = current

[alias]
  s = status
  c = commit
  amend = commit --amend
  br = branch
  bra = branch --all
  co = checkout
  sw = switch
  swc = switch --create
  ad = add
  pushf = push --force-with-lease

  df = diff
  dff = diff --name-only
  dfs = diff --cached

  fixup = !bash -c 'COMMIT=`git rev-parse ${1:-HEAD}` && git commit --fixup=$COMMIT && GIT_EDITOR=: git rebase -i --autosquash ${COMMIT}^' -

[diff]
  compactionHeuristic = true
  wsErrorHighlight = all

[diff "exif"]
  textconv = exiftool

[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less

[ghq]
  root = ~/workspace/git

[rebase]
  autoStash = true
  autoSquash = true

[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f

[include]
  path = ~/.config/git/config.local
