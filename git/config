[include]
  path = ~/.gitconfig.local

[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  editor = vim -i NONE -N -c 'syntax on'

[color]
  ui = true
  branch = auto
  diff = auto
  status = auto
  showbranch = auto

[color "branch"]
  current = green reverse
  local = green
  remote = 243

[color "diff"]
  meta = 242 238
  frag = 239 236
  old = 167 normal
  new = 030 normal
  context = 240
  commit = 246 024

[color "status"]
  added = green
  changed = cyan
  untracked = yellow

[merge]
  ff = false

[pull]
  ff = only

[alias]
  s = status
  c = commit
  amend = commit --amend
  br = branch
  bra = branch -a
  ch = checkout
  co = checkout
  ad = add
  pushf = push --force-with-lease

  df = diff
  dff = diff --name-only
  dfs = diff --cached

  fixup = "!f() { TARGET=$(git rev-parse "$1"); git commit --fixup=$TARGET ${@:2} && EDITOR=true git rebase -i --autostash --autosquash $TARGET^; }; f"

[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[diff]
  compactionHeuristic = true
	wsErrorHighlight = all

[diff "exif"]
  textconv = exiftool

[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less

[ghq]
  root = ~/workspace/git

[rebase]
	autoStash = true
	autoSquash = true

