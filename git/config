[include]
  path = ~/.gitconfig.local

[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  editor = vim -i NONE -N -c 'syntax on'

[color]
  ui = true
  branch = auto
  diff = auto
  status = auto
  showbranch = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green


[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = cyan bold

[color "status"]
  added = green
  changed = cyan
  untracked = yellow

[merge]
  ff = false

[pull]
  ff = only

[alias]
  s = status
  c = commit
  amend = commit --amend
  br = branch
  bra = branch -a
  ch = checkout
  co = checkout
  ad = add
  pushf = push --force-with-lease

  df = diff
  dff = diff --name-only
  dfs = diff --cached

[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true

[diff "exif"]
  textconv = exiftool
[diff]
  compactionHeuristic = true
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less

[ghq]
  root = ~/workspace/git
